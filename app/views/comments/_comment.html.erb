<p> 
	<strong>Commenter:</strong>
	<%= comment.commenter %>
</p>

<p>
	<strong>Comment:</strong>
	<%= comment.body %>
</p>

<p>
	<%= link_to 'Delete Comment', [comment.post, comment],
								method: :delete,
								data: { confirm: 'y agAIN?' } %>
</p>

<%= form_for([@comment, @comment.replies.build]) do |f| %>
	<p> 
		<%= f.label :commenter %><br>
		<%= f.text_field :commenter %>
	</p>

	<p>
		<%= f.label :body %><br>
		<%= f.text_field :body %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>