<h1>List of all Posts</h1>

<%= link_to 'New Post', new_post_path %>

<table>
	<tr>
		<th>User</th>
		<th>Text></th>
	</tr>

	<% @posts.each do |post| %>
		<tr>
			<td><%= post.user_id %></td>
			<td><%= post.text %></td>
			<td><%= link_to 'Show', post_path(post) %></td>
			<td><%= link_to 'Edit', edit_post_path(post) %></td>
			<td><%= link_to 'Delete', post_path(post), 
										method: :delete,
										data: {confirm: "y tho?"} %></td>			
		</tr>
	<% end %>

</table> 